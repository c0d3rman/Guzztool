{
    "name": "Scyther's Mantis Estimation",
    "description": "Automatically calculates power and bulk using Mantis Estimation™.",
    "color": "#4caf50",
    "icon": "icon.png",
    "matches": ["*://play.pokemonshowdown.com/*", "*://*.psim.us/*"],
    "content_scripts": ["content.js"],
    "settings": [
        {
            "id": "explanation",
            "type": "custom",
            "title": "About Mantis Estimation™"
        },
        {
            "id": "show_bulk",
            "type": "boolean",
            "title": "Show bulk values",
            "default": true
        },
        {
            "id": "show_power",
            "type": "boolean",
            "title": "Show power values",
            "default": true
        },
        {
            "id": "show_power_in_search",
            "type": "boolean",
            "title": "Show power values in move search",
            "default": true
        },
        {
            "id": "show_bulk_in_search",
            "type": "boolean",
            "title": "Show bulk values in Pokemon search",
            "default": true
        },
        {
            "id": "show_modified_stats_in_battle",
            "type": "boolean",
            "title": "Show modified stats in battle (includes stat boosts, items, etc.)",
            "default": true
        },
        {
            "id": "min_roll",
            "type": "boolean",
            "title": "Use min-roll power (shows as 3.3m), instead of the default max-roll (shows as 3.3).",
            "default": false
        },
        {
            "id": "use_damage_calc",
            "type": "boolean",
            "title": "Use damage calculator for accurate modifiers (items, abilities, field effects)",
            "default": true
        },
        {
            "id": "physical_color",
            "type": "string",
            "title": "Physical color",
            "default": "#d32f2f",
            "additional_properties": "type=\"color\""
        },
        {
            "id": "special_color",
            "type": "string",
            "title": "Special color",
            "default": "#1976d2",
            "additional_properties": "type=\"color\""
        },
        {
            "id": "use_base_set_in_search",
            "type": "boolean",
            "title": "Use current set for Pokémon search display/sort",
            "description": "If enabled, the bulk values in the Pokémon search in teambuilder will use your current set's EVs and item, so you can compare them directly to your current Pokémon.",
            "default": false
        }
    ]
} 